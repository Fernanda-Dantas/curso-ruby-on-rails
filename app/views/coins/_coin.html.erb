
<form id="<%= dom_id coin %>">

  <div class="form-group">
    <%= label_tag nil, Coin.human_attribute_name(:description), style: "display: block" %>
    <%= text_field_tag nil, coin.description, class:"form-control m-2", disabled: true %>
  </div>

  <div class="form-group">
    <%= label_tag nil, Coin.human_attribute_name(:acronym), style: "display: block" %>
    <%= text_field_tag nil, coin.acronym, class:"form-control m-2", disabled: true %>
  </div>

  <div class="form-group">
    <%= label_tag nil, Coin.human_attribute_name(:url_image), style: "display: block" %>
    <%= text_field_tag nil, coin.url_image, class:"form-control m-2", disabled: true %>
  </div>

  <div class="form-group">
    <%= label_tag nil, Coin.human_attribute_name(:mining_type), style: "display: block" %>
    <%= text_field_tag nil, coin.mining_type.description, class:"form-control m-2", disabled: true %>
  </div>

</form>





