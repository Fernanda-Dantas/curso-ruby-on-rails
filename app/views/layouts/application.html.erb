<!DOCTYPE html>
<html>
  <head>
    <title>CryptoWallet</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "scaffolds", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag params[:controller], "data-turbo-track": "reload" %>

    <%= javascript_importmap_tags 'application' %>
    <%= javascript_importmap_tags params[:controller] %>
    <%= javascript_include_tag params[:controller], "data-turbo-track": "reload" %>
  </head>

  <body>
  <h1>Tela - <%= params[:controller] %></h1>
  <h1>CABEÇALHO</h1>
    <%= yield %>
    <h1>RODAPÉ</h1>

    <script>
      $(document).ready(function() {
        $.notify("Access granted", "success");
      });</script>

  </body>
</html>
